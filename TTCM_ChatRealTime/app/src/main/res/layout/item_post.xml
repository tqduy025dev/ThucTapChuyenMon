<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#A9ADB5"
    android:paddingBottom="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgItem_Avt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"/>


            <ImageView
                android:id="@+id/imgItem_post_menu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_more" />

            <TextView
                android:id="@+id/txtItem_post_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imgItem_Avt"
                android:text="@string/usernane"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtItem_post_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtItem_post_userName"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/imgItem_Avt"
                android:text="time" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtItem_post_postContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="10dp"
                android:text="nội dung trạng thái"
                android:textColor="@color/black"
                android:textSize="17dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgViewItem_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:scaleType="fitCenter" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <ImageView
                android:id="@+id/imgItem_like"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_favorite" />

            <ImageView
                android:id="@+id/imgItem_comment"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@id/imgItem_like"
                android:src="@drawable/ic_comment" />

            <ImageView
                android:id="@+id/imgItem_save"
                android:layout_width="35dp"
                android:layout_height="34dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_baseline_save" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/stack"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/txtItem_post_likeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtItem_post_commentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp" />

    </LinearLayout>


</RelativeLayout>