<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8BE4EF"
    tools:context=".RegistrationActivity">


    <TextView
        android:layout_width="297dp"
        android:layout_height="49dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:gravity="center"
        android:text="@string/sigup"
        android:textSize="35dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txt_signUp_userName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_above="@+id/txt_signUp_email"
        android:layout_alignStart="@+id/txt_signUp_passWord"
        android:layout_alignEnd="@+id/txt_signUp_passWord"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/boder_rectangle"
        android:hint="@string/usernane"
        android:paddingLeft="15dp"
        android:inputType="textLongMessage"
        android:maxLines="1"
        android:paddingRight="15dp"
        android:textColor="@android:color/background_dark"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/txt_signUp_fullName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_above="@+id/txt_signUp_userName"
        android:layout_alignStart="@+id/txt_signUp_userName"
        android:layout_alignEnd="@+id/txt_signUp_userName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/boder_rectangle"
        android:maxLines="1"
        android:inputType="textLongMessage"
        android:hint="@string/fullname"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@android:color/background_dark"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/txt_signUp_passWord"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_above="@+id/txt_signUp_confimPass"
        android:layout_alignStart="@+id/txt_signUp_confimPass"
        android:layout_alignEnd="@+id/txt_signUp_confimPass"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/boder_rectangle"
        android:hint="@string/prompt_password"
        android:maxLines="1"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/txt_signUp_confimPass"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btn_signUp"
        android:layout_alignStart="@+id/txt_signUp_email"
        android:layout_alignEnd="@+id/txt_signUp_email"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:background="@drawable/boder_rectangle"
        android:inputType="textPassword"
        android:maxLines="1"
        android:hint="@string/confim_password"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@android:color/background_dark"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/txt_signUp_email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_above="@+id/txt_signUp_passWord"
        android:layout_alignStart="@+id/btn_signUp"
        android:layout_alignEnd="@+id/btn_signUp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/boder_rectangle"
        android:hint="@string/prompt_email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_signUp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="179dp"
        android:background="@drawable/boder_rectangle"
        android:text="@string/sigup"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_signUp"
        android:layout_alignTop="@+id/btn_signUp"
        android:layout_alignEnd="@+id/btn_signUp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/haved_account"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tv_signUp_trovedangnhap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/black"
                android:text="@string/login"
                android:textSize="15sp" />



        </LinearLayout>

    </LinearLayout>


</RelativeLayout>