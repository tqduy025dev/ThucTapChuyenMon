<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="65dp"
        android:layout_alignParentStart="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgItem_chat_avatar"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_margin="2dp"
            android:layout_gravity="center" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="4dp"
            android:background="@drawable/background_chat_left">

            <TextView
                android:id="@+id/txtItem_chat_messageContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:text="Hello"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/imgItem_chat_message"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentStart="true"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="8dp"
                android:visibility="gone"
                android:padding="5dp"/>
            <ImageView
                android:id="@+id/imgItem_chat_download"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toEndOf="@+id/imgItem_chat_message"
                android:src="@drawable/ic_baseline_file_download"
                android:layout_centerVertical="true"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txtItem_chat_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtItem_chat_messageContent"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txtItem_chat_timeImg"
                android:layout_below="@+id/imgItem_chat_message"
                android:layout_width="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="10sp"
                android:paddingBottom="8dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <ImageView
            android:id="@+id/imgItem_chat_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_delete"
            android:visibility="gone"
            android:layout_gravity="center"/>


    </LinearLayout>




</RelativeLayout>